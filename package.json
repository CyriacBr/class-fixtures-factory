{
  "version": "1.6.1",
  "name": "class-fixtures-factory",
  "author": "CyriacBr",
  "license": "MIT",
  "keywords": [
    "typescript",
    "class",
    "fixture",
    "factory",
    "generator",
    "entity",
    "fixtures"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CyriacBr/class-fixtures-factory.git"
  },
  "main": "dist/class-fixtures-factory.cjs.js",
  "typings": "dist/class-fixtures-factory.cjs.d.ts",
  "files": [
    "dist",
    "plugins/class-validator",
    "plugins/type-graphql",
    "plugins/typeorm",
    "plugins/mikro-orm"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "prebuild": "yarn preconstruct fix",
    "build": "preconstruct build",
    "postbuild": "yarn copy-shims:typeorm && yarn copy-shims:mikro-orm",
    "copy-shims:typeorm": "shx cp src/plugins/typeorm/shims.d.ts plugins/typeorm/dist/shims.d.ts",
    "copy-shims:mikro-orm": "shx cp src/plugins/mikro-orm/shims.d.ts plugins/mikro-orm/dist/shims.d.ts",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "release:first": "standard-version --first-release",
    "release": "standard-version",
    "release:publish": "git push --follow-tags origin develop && yarn publish",
    "prepublish": "yarn build",
    "docs:api": "api-extractor run --local --verbose && cd docs && api-documenter markdown"
  },
  "module": "dist/class-fixtures-factory.esm.js",
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@microsoft/api-documenter": "^7.7.14",
    "@microsoft/api-extractor": "^7.7.10",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/reflection": "^4.5.9",
    "@mikro-orm/sqlite": "^4.5.9",
    "@preconstruct/cli": "^2.0.6",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-jest": "^26.6.3",
    "class-validator": "0.11.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "graphql": "^15.5.0",
    "husky": "^4.2.3",
    "jest-tap-reporter": "^1.9.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "shx": "^0.3.3",
    "sqlite3": "^5.0.2",
    "standard-version": "7.1.0",
    "ts-node": "^10.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.34",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "class-validator": "0.11.1",
    "graphql": "^15.5.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.0",
    "@mikro-orm/core": "^4.5.0"
  },
  "dependencies": {
    "@types/faker": "^4.1.10",
    "@types/treeify": "^1.0.0",
    "chalk": "^3.0.0",
    "faker": "^4.1.0",
    "tinspector": "^2.3.1",
    "treeify": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn run test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest-formatting/recommended"
    ],
    "ignorePatterns": [
      "node_modules/"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "no-unused-vars": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "preconstruct": {
    "entrypoints": [
      "./index.ts",
      "./plugins/class-validator/index.ts",
      "./plugins/type-graphql/index.ts",
      "./plugins/typeorm/index.ts",
      "./plugins/mikro-orm/index.ts"
    ]
  }
}
